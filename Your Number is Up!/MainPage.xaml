                VerticalOptions="Center"
                HorizontalOptions="Start"
                FontSize="Medium">

    

        </Label>
    
        <!--Main result number label-->
        <Label 
                x:Name="MainResult"
                Text="Main Result"
                FontSize="Large"
                WidthRequest="40"
                HeightRequest="40"
                BackgroundColor="DarkOliveGreen"
                VerticalOptions="Center"
                HorizontalOptions="Center">
            
        </Label>
        <!--Second operand for label-->
        <Label   
                x:Name="SecondOp"
                Text="Second Operand"
                WidthRequest="40"
                HeightRequest="40"
                FontSize="Large"
                BackgroundColor="Orange"
                VerticalOptions="Center"
                HorizontalOptions="Center">

        </Label>
        <!--Space-->
        <Frame
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="60"
            HeightRequest="60"
            BackgroundColor="White"
            BorderColor="Green"
            x:Name="DropArea">
            <Frame.GestureRecognizers>
                <DropGestureRecognizer AllowDrop="True"
                 Drop="DropGestureRecognizer_Drop"
                                       />
            </Frame.GestureRecognizers>
            
        </Frame>
        
        
        <Label
            x:Name="Addition"
            Text=""
            ClassId="AdditionDrag"
            BackgroundColor="Yellow"
            WidthRequest="40"
            HeightRequest="40"
            HorizontalOptions="Start"
            VerticalOptions="Start"
            >
            
            <Label.GestureRecognizers>
                <DragGestureRecognizer CanDrag="True"
                 DragStarting="DragGestureRecognizer_DragStarting"/>
            </Label.GestureRecognizers>
            
        </Label>

        <Label
            x:Name="Subtraction"
            Text=""
            ClassId="SubtractionDrag"
            BackgroundColor="Brown"
            WidthRequest="80"
            HeightRequest="80"
            HorizontalOptions="Start"
            VerticalOptions="Start"
            >

            <Label.GestureRecognizers>
                <DragGestureRecognizer CanDrag="True"
                 DragStarting="DragGestureRecognizer_DragStarting"/>
            </Label.GestureRecognizers>

        </Label>
        <Label
            x:Name="Multiplication"
            Text=""
            ClassId="MultiplicationDrag"
            BackgroundColor="Orange"
            WidthRequest="80"
            HeightRequest="80"
            HorizontalOptions="Start"
            VerticalOptions="Start">

            <Label.GestureRecognizers>
                <DragGestureRecognizer CanDrag="True"
                 DragStarting="DragGestureRecognizer_DragStarting"/>
            </Label.GestureRecognizers>

        </Label>
        <Label
            x:Name="Division"
            Text=""
            ClassId="DivisionDrag"
            BackgroundColor="Purple"
            WidthRequest="80"
            HeightRequest="80"
            HorizontalOptions="Start"
            VerticalOptions="Start">

            <Label.GestureRecognizers>
                <DragGestureRecognizer CanDrag="True"
                
                DragStarting="DragGestureRecognizer_DragStarting"/>
            </Label.GestureRecognizers>

        </Label>



