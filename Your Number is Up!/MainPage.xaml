             x:Class="Your_Number_is_Up_.MainPage">

    <StackLayout Spacing="20">
        <Label Text="Choose the correct block that completes the equation!"
            VerticalOptions="Center"
            FontSize="Large"
            >
            
        </Label>
    
   
   

        <!--Score-->
        <Label 
                x:Name="Score"
                Text=""
                BackgroundColor="Green"
                VerticalOptions="Center"
                HorizontalOptions="Start"
                FontSize="Medium">
                


